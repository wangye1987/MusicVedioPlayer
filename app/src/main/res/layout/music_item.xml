<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_434e5f"
    android:layout_width="match_parent"
    android:layout_height="110dp">


    <ImageView
        android:id="@+id/iv_music"
        android:src="@drawable/music_record"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/dimen_5"
        style="@style/music_sd_style"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_music_name"
        style="@style/music_sd_style"
        android:text="忘情水"
        android:maxLines="1"
        android:maxLength="15"
        android:ellipsize="end"
        android:layout_alignTop="@+id/iv_music"
        android:layout_toRightOf="@+id/iv_music"
        android:layout_toEndOf="@id/iv_music"
        />

    <TextView
        android:id="@+id/tv_music_duration"
        style="@style/music_sd_style"
        android:layout_alignBottom="@+id/iv_music"
        android:layout_toEndOf="@id/iv_music"
        android:layout_toRightOf="@id/iv_music"
        android:gravity="bottom"
        android:text="04.26" />

    <TextView
        android:id="@+id/tv_music_artise"
        android:text="刘德华"
        android:maxLines="1"
        android:maxLength="10"
        android:ellipsize="end"
        style="@style/music_sd_style"
        android:layout_alignTop="@+id/iv_music"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_music_size"
        android:text="4.8MB"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_music"
        style="@style/music_sd_style" />
</RelativeLayout>
